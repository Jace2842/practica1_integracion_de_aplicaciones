{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pedido",
  "description": "Representa un pedido realizado por un cliente",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "clienteId": {
      "type": "string"
    },
    "proveedorId": {
      "type": "string"
    },
    "productos": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/producto"
      }
    },
    "estado": {
      "type": "string",
      "enum": [
        "pendiente",
        "en_transito",
        "entregado"
      ]
    }
  },
  "required": [
    "id",
    "clienteId",
    "proveedorId",
    "productos",
    "estado"
  ],
  "definitions": {
    "producto": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Producto",
      "description": "Representa un producto dentro de un pedido",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "nombre": {
          "type": "string"
        },
        "cantidad": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "id",
        "nombre",
        "cantidad"
      ]
    }
  }
}