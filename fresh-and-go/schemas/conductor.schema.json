{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Conductor",
  "description": "Representa un conductor/repartidor del sistema logístico",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "nombre": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "telefono": {
      "type": "string"
    },
    "vehiculoAsignado": {
      "type": "string",
      "description": "ID del vehículo asignado"
    },
    "licenciaConducir": {
      "type": "string",
      "description": "Número de licencia de conducir"
    },
    "disponibilidad": {
      "type": "boolean",
      "description": "Disponibilidad actual del conductor"
    }
  },
  "required": [
    "id",
    "nombre",
    "email",
    "vehiculoAsignado",
    "licenciaConducir"
  ]
}
