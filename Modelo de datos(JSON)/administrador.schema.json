{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Administrador",
  "description": "Representa un administrador del sistema log√≠stico",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "nombre": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "telefono": {
      "type": "string"
    },
    "permisos": {
      "type": "array",
      "description": "Lista de permisos asignados al administrador",
      "items": {
        "type": "string",
        "enum": [
          "gestionar_usuarios",
          "gestionar_pedidos",
          "gestionar_incidencias",
          "ver_reportes"
        ]
      }
    }
  },
  "required": [
    "id",
    "nombre",
    "email",
    "permisos"
  ]
}
