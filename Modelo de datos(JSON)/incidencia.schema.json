{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Incidencia",
  "description": "Registro de una incidencia ocurrida durante la entrega o transporte",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "pedidoId": {
      "type": "string"
    },
    "descripcion": {
      "type": "string"
    },
    "fecha": {
      "type": "string",
      "format": "date-time"
    },
    "resuelta": {
      "type": "boolean"
    }
  },
  "required": [
    "id",
    "pedidoId",
    "descripcion",
    "fecha"
  ]
}