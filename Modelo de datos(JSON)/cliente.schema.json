{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cliente",
  "description": "Representa un cliente en el sistema CRM",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "nombre": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "direccion": {
      "type": "string"
    },
    "telefono": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "nombre",
    "email"
  ]
}
