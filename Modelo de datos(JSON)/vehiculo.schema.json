{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vehículo",
  "description": "Representa un vehículo de la flota",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "matricula": {
      "type": "string"
    },
    "capacidadKg": {
      "type": "number"
    },
    "gps": {
      "type": "string"
    },
    "temperatura": {
      "type": "number"
    }
  },
  "required": [
    "id",
    "matricula"
  ]
}