{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pedido",
  "description": "Representa un pedido realizado por un cliente",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "clienteId": {
      "type": "string"
    },
    "proveedorId": {
      "type": "string"
    },
    "productos": {
      "type": "array",
      "items": {
        "$ref": "producto.schema.json"
      }
    },
    "estado": {
      "type": "string",
      "enum": [
        "pendiente",
        "en_transito",
        "entregado"
      ]
    }
  },
  "required": [
    "id",
    "clienteId",
    "proveedorId",
    "productos",
    "estado"
  ]
}